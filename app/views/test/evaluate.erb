<%= render :partial => "/test/navbar" %>

<div style="height:40px"></div> <!--걍 여백 -->       

<div class="col-md-8 col-md-offset-2 col-sm-12 co-xs-12">
    <div class="form-style-10" style="padding: 45px 0px 45px 0px;">
      
    <div class="section" style="padding-left: 40px"><h3><%=@lecture_name%> | <%=@lecture_prof%> | <%=@lecture_id%>에 대한 평가를 남겨주세요</h3></div>  
    <div class="inner-wrap">
        <form action="/test/evaluate_write" method="POST" enctype="multipart/form-data" name="write_form" onsubmit="return overTag()">
            <input type="hidden" name="lecture_id" value=<%=@lecture_id%>>
            <div class="row">
                <div class="col-md-12">
                <div class="col-md-6">
                <p><h5>학점</h5>
                <span class="star-rating small">
                  <input type="radio" name="lecture_grade" value="1"><i></i>
                  <input type="radio" name="lecture_grade" value="2"><i></i>
                  <input type="radio" name="lecture_grade" value="3"><i></i>
                  <input type="radio" name="lecture_grade" value="4"><i></i>
                  <input type="radio" name="lecture_grade" value="5"><i></i>
                </span>
                </p>
                </div>
                <div class="col-md-6">
                <p><h5>학습량</h5>
                <span class="star-rating small">
                  <input type="radio" name="lecture_amount" value="1"><i></i>
                  <input type="radio" name="lecture_amount" value="2"><i></i>
                  <input type="radio" name="lecture_amount" value="3"><i></i>
                  <input type="radio" name="lecture_amount" value="4"><i></i>
                  <input type="radio" name="lecture_amount" value="5"><i></i>
                </span>
                </p>
                </div>
                <div class="col-md-6">
                  <p><h5>성취감</h5>
                  <span class="star-rating small">
                  <input type="radio" name="lecture_achievement" value="1"><i></i>
                  <input type="radio" name="lecture_achievement" value="2"><i></i>
                  <input type="radio" name="lecture_achievement" value="3"><i></i>
                  <input type="radio" name="lecture_achievement" value="4"><i></i>
                  <input type="radio" name="lecture_achievement" value="5"><i></i>
                </span>
                </p>
                </div>
                <div  class="col-md-6"> 
                  <p><h5>총점</h5>
                  <span class="star-rating small">
                  <input type="radio" name="lecture_score" value="1"><i></i>
                  <input type="radio" name="lecture_score" value="2"><i></i>
                  <input type="radio" name="lecture_score" value="3"><i></i>
                  <input type="radio" name="lecture_score" value="4"><i></i>
                  <input type="radio" name="lecture_score" value="5"><i></i>
                </span>
                </p>
                </div>
                </div>
                <div class="col-md-6">
                     <h5>과제와 시험</h5>
                     <input type="text" name="content" placeholder="시험에 대해 써주세요." required style="height: 100px;">
                </div>
                <div class="col-md-6">
                     <h5>수강후기</h5>
                     <input type="text" name="content" placeholder="소감을 입력해주세요." required style="height: 100px;">
                </div>
                <div class="col-md-12" style="padding-top: 10px;">
                     <button type="submit" class="btn tf-btn btn-default" style="float: right;"> 평가하기 </button>
                 </div>
             </div>
        </form>
        <br>
            </div>
        </div>
    </div>
        
<style>
.form-style-10 {
    width: 100%;
    padding: 0px;
    margin: 40px auto;
    background: #FFF;
    border-radius: 10px;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    box-shadow: 0px 0px 10px rgba(0,0,0,0.13);
    -moz-box-shadow: 0px 0px 10px rgba(0,0,0,0.13);
    -webkit-box-shadow: 0px 0px 10px rgba(0,0,0,0.13);
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
    opacity: 0.8;
}

.section {
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
    color: #81BEF7;
    margin-bottom: 5px;
    font-weight: 900;
    font-size: 150%;
}

.inner-wrap {
    padding: 30px 40px 30px 40px;
    background: #F8F8F8;
    border-radius: 6px;
    margin-bottom: 15px;
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
}
</style>