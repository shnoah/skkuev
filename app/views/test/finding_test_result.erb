       <%= render :partial => "/test/navbar" %>
        
        <div class="col-md-12" style="height:auto;; text-align:center; background-color: #F0F0F0; margin:0px 0px 0px 0px; padding-top: 50px;"> 
          <div style="padding: 20px 0px 20px 0px;">
            <span style="font-weight: 800; color:#727272; font-size: 120%;">검색결과 |</span> 
            <span style="font-weight: 500;color:#b2b2b2; font-size: 120%;">&nbsp; 강의과목 입니다.</span>
          </div>
        </div>     
       
        <% @results.each do |j|%>
        <div class="col-md-3">
        <div class="col-sm-6 col-md-12 col-lg-12">
            <div class="portfolio-item" data-toggle="modal" data-target='#myModal_<%=j.code%>'>
                <div class="hover-bg">
                    <a href="#">
                        <div class="hover-text">
                            <h4><%=j.name%></h4>
                            <small>상세보기</small>
                            <div class="clearfix"></div>
                            <i class="fa fa-plus"></i>
                        </div>
                         <p style="padding-top: 20%; padding-left: 30%; margin-top: 0px;margin-bottom: 0px;"><h3 style="text-align: center;"><%=j.name%></h3>
                         <span style="font-weight: 300;color:#b2b2b2; font-size: 90%;"><p style="text-align: center; padding-top: 25px;"><%=j.prof%></p></span>                         
                         <hr>
                         <h6 style="text-align: center; margin-top: 0px;"><%=j.code%></h6>
                         <br>
                         </p>
                         <input type="hidden" name='abc' value='<%=j.code%>'>
                    </a>
                </div>
            </div>
        </div>
        </div>
                    
        <!-- 평균 -->
        <%@eval = Evaluation.where(lecture_id: j.code)%>
         
        <%sum_score=0%>
        <%sum_amount=0%>
        <%sum_achievement=0%>
        <%sum_grade=0%>
        <%@avg_score=0%>
        <%@avg_amount=0%>
        <%@avg_achievement=0%>
        <%@avg_grade=0%>
      
        <%@eval.each do |x|%>
          <% sum_score+=x.lecture_score %>
          <% sum_amount+=x.lecture_amount %>
          <% sum_achievement+=x.lecture_achievement %>
          <% sum_grade+=x.lecture_grade %>
        <%end%>
      
        <% if @eval.count!=0 %>
          <%@avg_score=sum_score/@eval.count %>
          <%@avg_amount=sum_amount/@eval.count %>
          <%@avg_achievement=sum_achievement/@eval.count %>
          <%@avg_grade=sum_grade/@eval.count %>
        <%end%>
        
        <!-- Modal -->              
        <div class="modal fade" id="myModal_<%=j.code%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <%@id = j.code.to_s%>
              <%@lecture = Subject.where(code: j.code)%>
               
            <h1 style="color:#58ACFA; font-size: 29px;"><%=@lecture.first.name%>
              <form action="/test/evaluate" method="POST" style="float: right;">
                <input type="hidden" name="lecture_id" value="<%=@lecture.first.code%>">
                <input type="hidden" name="lecture_name" value="<%=@lecture.first.name%>">
                <input type="hidden" name="lecture_prof" value="<%=@lecture.first.prof%>">
                
                <button type="submit" class="btn tf-btn btn-default" style="background-color: #333; border-radius: 5px;"> 평가하기 </button>
              </form>
            </h1>  
        </div>

        <!-- 별.평점 -->
        <div class="col-md-12" style="padding-top: 0px; background-color: #333; padding-top: 10px; padding-bottom: 10px;">
          <%= form_tag("/test/evaluate", method: "post") do %>
            <%if Evaluation.find_by_lecture_id(j.code)==nil%>
            <div class="alert alert-danger" role="alert">아직 평가가 없습니다. 첫 평가를 남겨주세요!</div>
          <%end%>    
          
          <div class="col-xs-6 col-md-6">
          <h5 style="color: white;">총평
          &nbsp;&nbsp;&nbsp;<span class="star-rating small">
            <% 1.upto(5) do |i| %>
              <% if i == @avg_score.round(0) %>
                <i class="on_s"></i>
              <% else%>
                <i></i>
              <% end %>
            <% end %>
          </span>
          </h5>
          </div>
        
          <div class="col-xs-6 col-md-6">
          <h5 style="color: white;">
          학습량
          <span class="star-rating small">
            <% 1.upto(5) do |i| %>
              <% if i == @avg_amount.round(0) %>
                <i class="on_s"></i>
              <% else%>
                <i></i>
              <% end %>
            <% end %>
          </span>
          </h5>
          </div>
          
          <div class="col-xs-6 col-md-6">
          <h5 style="color: white;">
          성취감
          <span class="star-rating small">
            <% 1.upto(5) do |i| %>
              <% if i == @avg_achievement.round(0) %>
                <i class="on_s"></i>
              <% else%>
                <i></i>
              <% end %>
            <% end %>
          </span>
          </h5>
          </div>
          
          <div class="col-xs-6 col-md-6">
          <h5 style="color: white;">
          학점
          &nbsp;&nbsp;&nbsp;<span class="star-rating small">
            <% 1.upto(5) do |i| %>
              <% if i == @avg_grade.round(0) %>
                <i class="on_s"></i>
              <% else%>
                <i></i>
              <% end %>
            <% end %>
           </span>
           </h5>
           </div>
           
        </div>
        <br>
        
        <!-- 강의정보 -->
        <div class="col-md-12" style="background-color: white; margin-top: 0px;padding-top: 10px; border-radius: 3px;">
          <div class="col-xs-6 col-md-3">
          <img src="../assets/img/07.png" style="width: 20px; margin-top: 5px" align="left"><h6 style="text-align: center;"><%=@lecture.first.prof%></h6>
          </div>
          <div class="col-xs-6 col-md-3">
          <img src="../assets/img/08.png" style="width: 20px; margin-top: 5px" align="left"><h6 style="text-align: center;"><%=@lecture.first.time.gsub(/[A-Z0-9]{6}/,'').gsub(/[A-Z0-9]{5}/,'').tr("【","").tr("】","")%></h6>
          </div>
          <div class="col-xs-6 col-md-3">
          <img src="../assets/img/09.png" style="width: 20px; margin-top: 5px" align="left">
          <h6 style="text-align: center;">
          <%if @lecture.first.time[18]=="】"%>
              <%=@lecture.first.time[13..17]%> <!--강의실 번호가 5자리인 경우 -->
          <%else%>
              <%=@lecture.first.time[13..18]%> <!--강의실 번호가 6자리인 경우 -->
          <%end%>
          </h6>
          </div>
          <div class="col-xs-6 col-md-3">
          <img src="../assets/img/10.png" style="width: 15px; margin-top: 5px" align="left">
          <h6 style="text-align: center;"><%=@lecture.first.note01%></h6>
          </div>
        </div>
          <%@eval.each do |x|%>
          <%=x.lecture_score%>
          <%=x.content%> <a href="/test/delete/<%=x.id%>">[x]</a><a href="/test/modify/<%=x.id%>">수정</a>
          <%end%>
          
          <%end%>     

      </div>
    </div>
  </div>
<%end%>

        
  <div class="col-md-12">
  <%= render :partial => "/test/bottom" %>
  </div>